{
  "$schema": "http://json-schema.org/schema#",
  "title" : "Virtual Machine Image",
  "type" : "object",
  "properties" : {

    "image" : {

      "description" : "A bootable virtual machine image",
      "type" : "string",
      "default" : "service.img"
    },

    "drives" : {

      "description" : "Additional virtual hard drives",
      "type" : "array",
      "items" : {
        "type" : "object",
        "properties" : {
          "file" : { "type" : "string" },
          "type" : { "enum" : ["ide", "virtio"] },
          "format" : { "enum" : ["raw", "qcow2", "vdi"] },
          "media" : { "enum" : ["disk"] },
          "name" : { "type" : "string" }
        },

        "required" : ["file", "type", "format", "media"]
      }
    },

    "net" : {

      "description" : "Network devices",
      "type" : "array",
      "items" : {
        "type" : "object",
        "properties" : {
          "type" : { "enum" : ["virtio"] },
          "name" : { "type" : "string" }
        },

        "required" : ["type"]
      }
    },


    "mem" : {

      "description" : "Amount of memory in megabytes",
      "type" : "number",
      "default" : 128
    },

    "cpu" : {

      "description" : "The virtual CPU",
      "enum" : ["host", "pentium"]
    },


    "smp" : {

      "description" : "Number of virtual CPU's",
      "type" : "number"
    }
  },

  "required" : ["image"]
}
