#pragma once

#if !defined(__cplusplus)
#error "THIS IS SUPPOSED TO BE C++"
#endif

#include <sys/types.h>
#include <stddef.h>
#include <stdint.h>


/* We're not building for linux */
#if defined(__linux__)
#error "You are not using a cross-compiler!"
#endif

/* We're only doing 32-bit ix86 targets. */
#if !defined(__i386__)
#error "This project needs to be compiled with an ix86-elf compiler"
#endif

//Unused parameters (necessary for syscall warnings)
#ifdef __GNUC__
#  define UNUSED(x) UNUSED_ ## x __attribute__((__unused__))
#else
#  define UNUSED(x) UNUSED_ ## x
#endif

//Hardware @todo Make this more C++'ish and proper.
#define MAX_NICS 4
#define MAX_DISKS 4 
#define MAX_SERIALS 4


/* LIMITS */
//#define SBRK_MAX 0x10000


//BOCHS Break point
#define BREAK __asm__ volatile("xchg %bx,%bx");

#ifndef PRODUCTION
#define ASSERT(X) assert(X)
#else
#define ASSERT(X)
#endif

#ifdef DEBUG
#define debug(X,...)  printf("\n" X,##__VA_ARGS__);
#else 
#define debug(X,...) 
#endif

#ifdef DEBUG2
#define debug2(X,...)  printf("\n" X,##__VA_ARGS__);
#else 
#define debug2(X,...) 
#endif
